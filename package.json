{
  "name": "tor",
  "version": "0.0.1",
  "description": "Flexget alternative",
  "private": true,
  "bin": {
    "tor": "./bin/tor"
  },
  "scripts": {
    "check-coverage": "istanbul check-coverage --functions 100 --statements 100 --branches 100 --lines 100",
    "coverage": "istanbul cover _mocha -- -R spec --bail --check-leaks test/**/*.spec.js",
    "lint": "xo",
    "secure": "nsp check",
    "start": "./bin/tor missing",
    "test": "npm run lint && npm run coverage && npm run check-coverage",
    "Xtest:unit": "echo TODO && exit 1",
    "Xtest:integration": "echo TODO && exit 1"
  },
  "author": {
    "name": "Michal Bra≈°na",
    "email": "michal.brasna@gmail.com",
    "url": "https://github.com/Gobie"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gobie/tor"
  },
  "license": "MIT",
  "bugs": "https://github.com/Gobie/tor/issues",
  "dependencies": {
    "async": "^1.3.0",
    "autocmdr": "^0.0.8",
    "bytes": "^2.1.0",
    "cloudscraper": "^1.4.0",
    "commander": "^2.9.0",
    "glob": "^5.0.15",
    "humanize": "^0.0.9",
    "jsonfile": "^2.2.3",
    "lodash": "^3.10.0",
    "moment": "^2.10.6",
    "open": "^0.0.5",
    "pad": "^1.0.0",
    "parse-torrent-name": "^0.5.4",
    "prompt": "^0.2.14",
    "pushbullet": "^1.4.3",
    "request": "^2.65.0",
    "syno": "^1.0.5",
    "thepiratebay": "^0.2.5",
    "trakt.tv": "^1.0.3",
    "xml2js": "^0.4.15"
  },
  "devDependencies": {
    "istanbul": "^0.4.1",
    "mocha": "^2.3.4",
    "nsp": "^2.2.0",
    "pre-git": "^3.1.2",
    "xo": "^0.12.1"
  },
  "xo": {
    "space": true,
    "envs": [
      "node",
      "mocha"
    ],
    "ignores": [
      "config.js"
    ]
  },
  "config": {
    "pre-git": {
      "commit-msg": [
        "conventional"
      ],
      "pre-commit": [
        "npm test"
      ],
      "pre-push": [
        "rm -rf ./node_modules",
        "npm i",
        "npm outdated",
        "npm test"
      ],
      "post-commit": [],
      "post-merge": [
        "npm install"
      ]
    }
  }
}
